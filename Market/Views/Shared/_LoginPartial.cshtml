@using Market.Data.Models
@using Market.Services
@inject IUserService service
@{
    User user = service.GetUser();
}

<ul class="navbar-nav">
    @if(user != null)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="User" asp-action="Profile">@user.Email</a>
        </li>
        if(User.IsInRole("Organization"))
        {
            <li class="nav-item">
                <a class="nav-link text-dark " asp-controller="Cart" asp-action="Index"><i class="fa-solid fa-cart-shopping cart-icon"></i></a>
            </li>
        }
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="User" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="User" asp-action="Login">Login</a>
        </li>
    }
    
</ul>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

